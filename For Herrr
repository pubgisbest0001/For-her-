<body>
    <div class="container">
        <h1>Will you be my Valentine, Hetuuuu? ‚ù§Ô∏è <br><small>(ik apan thode door hai but we'll work it out together)</small></h1>
        <div class="buttons">
            <button class="yes" onclick="yesClicked()">Yes</button>
            <button class="no" id="noBtn" onmouseover="moveNoButton()">No</button>
        </div>
    </div>
    <script>
        function yesClicked() {
            alert("Yay! I love you ‚ù§Ô∏è");
            document.body.innerHTML = '<h1 style="color: red;">You made me the happiest person ever, Hetuuuu! ‚ù§Ô∏è</h1>' +
                                      '<h2 style="color: red;">Ab toh merko ahm aana padega meri babbyyyy ke liyee ‚ù§Ô∏è</h2>';
        }
        function moveNoButton() {
            let noBtn = document.getElementById("noBtn");
            let x = Math.random() * window.innerWidth * 0.8;
            let y = Math.random() * window.innerHeight * 0.8;
            noBtn.style.position = "absolute";
            noBtn.style.left = `${x}px`;
            noBtn.style.top = `${y}px`;
        }
        function createHeart() {
            const heart = document.createElement("div");
            heart.innerHTML = Math.random() > 0.5 ? "‚ù§Ô∏è" : "üíñ";
            heart.classList.add("heart");
            document.body.appendChild(heart);
            heart.style.left = Math.random() * window.innerWidth + "px";
            heart.style.animationDuration = Math.random() * 3 + 2 + "s";
            setTimeout(() => {
                heart.remove();
            }, 5000);
        }
        setInterval(createHeart, 500);
    </script>
